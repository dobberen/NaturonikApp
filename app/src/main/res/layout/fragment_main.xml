<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/slider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                </com.daimajia.slider.library.SliderLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/main_hits_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Хиты продаж"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/slider_card" />

            <LinearLayout
                android:id="@+id/main_hits_ll"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/main_hits_tv">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/hit1_iv"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Арахис очищенный сырой 38/42" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/hit2_iv"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Кешью очищенный сырой" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/offer_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Акции"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/main_hits_ll" />

            <LinearLayout
                android:id="@+id/offer_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@id/offer_tv">

                <ImageView
                    android:id="@+id/offer_iv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Купи 20 кг - получи 5 в подарок" />

            </LinearLayout>

            <TextView
                android:id="@+id/recipes_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Попробуйте"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/offer_ll" />

            <LinearLayout
                android:id="@+id/recipes_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@id/recipes_tv">

                <ImageView
                    android:id="@+id/recipes_iv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Кекс &#34;Лакомка&#34; с изюмом и орехами" />
            </LinearLayout>

            <TextView
                android:id="@+id/contacts_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Свяжитесь с нами"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/recipes_ll" />

            <LinearLayout
                android:id="@+id/contacts_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@id/contacts_tv"
                tools:layout_editor_absoluteX="4dp">


                <ImageView
                    android:id="@+id/contacts_email_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/contacts_whatsup_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />


            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</FrameLayout>