<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Main"
    android:layout_marginBottom="32sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/slider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                </com.daimajia.slider.library.SliderLayout>

            </android.support.v7.widget.CardView>



            <TextView
                android:id="@+id/main_categories_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Категории"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/slider_card" />

            <LinearLayout
                android:id="@+id/main_categories_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/main_categories_tv">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/peanut_iv"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_grey_a70"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Арахис"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/cashew_iv"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Кешью"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_grey_a70"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/pistachios_iv"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Фисташки"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_grey_a70"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/walnut_iv"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Грецкий орех"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_grey_a70"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/macadamia_iv"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Макадамия"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_grey_a70"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/almond_iv"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Миндаль"
                            android:layout_alignParentBottom="true"
                            android:background="@color/dark_grey_a70"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/hazelnut_iv"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Фундук"
                        android:layout_alignParentBottom="true"
                        android:background="@color/dark_grey_a70"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/contacts_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Свяжитесь с нами"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/main_categories_ll" />

            <LinearLayout
                android:id="@+id/contacts_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="3.01"
                app:layout_constraintTop_toBottomOf="@id/contacts_tv">


                <ImageView
                    android:id="@+id/contacts_email_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_email"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#008577"
                    android:layout_weight="0.005"/>

                <ImageView
                    android:id="@+id/contacts_phone_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_local_phone"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#008577"
                    android:layout_weight="0.005"/>

                <ImageView
                    android:id="@+id/contacts_whatsup_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_whatsapp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>


            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/dark_grey"
                app:layout_constraintTop_toBottomOf="@id/contacts_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/links_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:weightSum="2"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="naturonik.ru@gmail.com"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+7(***)***-**-**"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/links_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="naturonik.ru"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="32dp" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</FrameLayout>